<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password</title>
    <!-- CoreUI CSS -->
    <link href="https://cdn.jsdelivr.net/npm/@coreui/coreui@5.2.0/dist/css/coreui.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css"> <!-- Your custom styles if needed -->
</head>
<body class="c-app flex-row align-items-center"> <!-- Add CoreUI layout classes -->

    <div class="container">
        <!-- Reset Password form inside card -->
        <div class="card">
            <div class="card-header">
                <h2 class="text-center mb-4">Reset Password</h2> <!-- Text centered -->
            </div>
            <div class="card-body">
                <form action="/reset-password" method="POST">
                    <input type="hidden" name="_csrf" value="{{csrfToken}}">
                    <input type="hidden" name="token" value="{{token}}">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" name="email" id="email" class="form-control" placeholder="Email" required>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Send Reset Email</button> <!-- Full width button -->
                </form>
                <p class="text-center mt-3"><a href="/login">Back to Login</a></p> <!-- Link to go back -->
                
                <!-- Conditional messages (error or success) -->
                {{#if error}}<p class="text-danger">{{error}}</p>{{/if}}
                {{#if message}}<p class="text-success">{{message}}</p>{{/if}}
            </div>
        </div>
    </div> 

    <!-- CoreUI JS -->
    <script src="https://cdn.jsdelivr.net/npm/@coreui/coreui@5.2.0/dist/js/coreui.bundle.min.js"></script>

</body>
</html>
