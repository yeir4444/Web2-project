<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <!-- CoreUI CSS -->
    <link href="https://cdn.jsdelivr.net/npm/@coreui/coreui@5.2.0/dist/css/coreui.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css"> <!-- Your custom styles if needed -->
</head>
<body class="c-app flex-row align-items-center"> <!-- Add CoreUI layout classes -->

    <div class="container">
        <h2 class="text-center mb-4">Login</h2> <!-- CoreUI utility classes for spacing -->

        <form action="/login" method="POST">
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            
            <!-- Use CoreUI form classes for styling -->
            <div class="mb-3">
                <input type="email" name="email" placeholder="Email" class="form-control" required>
            </div>
            <div class="mb-3">
                <input type="password" name="password" placeholder="Password" class="form-control" required>
            </div>

            <!-- Submit button with CoreUI classes -->
            <button type="submit" class="btn btn-primary btn-block">Login</button>

            <!-- Links for forgotten password and registration -->
            <div class="text-center mt-3">
                <p><a href="/forgot-password">Forgot password?</a></p>
                <p><a href="/registration">Create an account</a></p>
            </div>

            <!-- Display error if any -->
            {{#if error}}<p class="text-danger text-center">{{error}}</p>{{/if}}
        </form>
    </div>

    <!-- CoreUI JS -->
    <script src="https://cdn.jsdelivr.net/npm/@coreui/coreui@5.2.0/dist/js/coreui.bundle.min.js"></script>

</body>
</html>
